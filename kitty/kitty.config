# Kitty Terminal Configuration

# -------------------------------
# Font Settings
font_size 12.0
font_family      family="JetBrains Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto

# -------------------------------
# URL Detection
detect_urls yes
# -------------------------------

# -------------------------------
# Mouse Settings
mouse_hide_wait 3.0
# -------------------------------

# -------------------------------
# Bell (Alert) Settings
enable_audio_bell false
visual_bell_duration 0.1
visual_bell_color none
window_alert_on_bell yes
# -------------------------------

# -------------------------------
# Window Layouts & Splits
enabled_layouts *

# Split window shortcuts
map ctrl+shift+right launch --location=vsplit --cwd=current
map ctrl+shift+down  launch --location=hsplit --cwd=current
map ctrl+shift+left  launch --location=hsplit --cwd=current
map ctrl+shift+w     close_window

# Navigate between splits
map shift+right neighboring_window right
map shift+left  neighboring_window left
map shift+up    neighboring_window up
map shift+down  neighboring_window down
# -------------------------------

# -------------------------------
# Window Appearance
window_border_width 0.5pt
draw_minimal_borders yes
# -------------------------------

# -------------------------------
# Cursor Settings
cursor_trail 1
cursor_trail_decay 0.2 0.4
# -------------------------------
