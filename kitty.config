font_family JetBrains Mono
font_size 12.0

detect_urls yes
mouse_hide_wait 3.0

# Remove beep sound
enable_audio_bell false

# Enable splits layout
enabled_layouts splits


# Window splits
map ctrl+shift+right launch --location=vsplit --cwd=current
map ctrl+shift+down launch --location=hsplit --cwd=current

# Close window
map ctrl+w close_window

# Navigate between splits
map ctrl+alt+right neighboring_window right
map ctrl+alt+left neighboring_window left
map ctrl+alt+up neighboring_window up
map ctrl+alt+down neighboring_window down
